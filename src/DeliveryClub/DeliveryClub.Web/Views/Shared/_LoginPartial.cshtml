@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="nav flex-row justify-content-end">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <strong><a id="manage" class="nav-link header-a text-dark">@UserManager.GetUserName(User)</a></strong>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Guest", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link header-a"><strong>Logout</strong></button>
        </form>
    </li>
}
else
{
    <li class="nav-item active">
        <strong><a class="nav-link header-a" id="login" asp-area="Identity" asp-page="/Account/Login">Log in</a></strong>
    </li>
    <li class="nav-item active">
        <strong><a class="nav-link header-a" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a></strong>
</li>
}
</ul>

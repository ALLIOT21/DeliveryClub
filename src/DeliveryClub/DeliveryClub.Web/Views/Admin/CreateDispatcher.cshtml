@model DeliveryClub.Web.ViewModels.Admin.Dispatchers.CreateDispatcherViewModel
@{
    ViewData["Title"] = "CreateDispatcher";
}

<h2>Create a dispatcher</h2>

<form method="post" asp-action="CreateDispatcher">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <p>E-mail:</p>
        <input type="text" asp-for="Email" class="input-group-text" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <p>Password:</p>
        <input type="password" asp-for="Password" class="input-group-text">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create">
    </div>
    <div class="form-group">
        <a asp-action="Dispatchers">Back to Dispatchers</a>
    </div>
</form>


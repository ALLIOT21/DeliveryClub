@model DeliveryClub.Web.ViewModels.SuperUser.UpdateAdminViewModel
@{
    ViewData["Title"] = "Update";
}

<div style="margin-left: auto; margin-right: auto; width: 20em">
    <h2>Update an administrator</h2>
    <form method="post" asp-action="UpdateAdmin">
        <div class="form-group">
            <p>E-mail:</p>
            <input type="text" asp-for="NewEmail" value="@Model.OldEmail" class="input-group-text" />
        </div>
        <div class="form-group">
            <p>Password:</p>
            <input type="password" asp-for="Password" value="" class="input-group-text">
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="OldEmail" value="@Model.OldEmail">
        <input type="submit" class="btn btn-primary" value="Update">
        <div class="form-group mt-3">
            <a asp-action="Index">Back to administrators</a>
        </div>
    </form>
</div>


@model DeliveryClub.Web.ViewModels.CreateAdminViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create an administrator</h2>

<form method="post" asp-action="CreateAdmin">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <p>E-mail:</p>
        <input type="text" asp-for="Email" class="input-group-text" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <p>Password:</p>
        <input type="password" asp-for="Password" class="input-group-text">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <input type="submit" class="btn" value="Create">
</form>


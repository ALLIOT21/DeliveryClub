@model DeliveryClub.Web.ViewModels.SuperUser.CreateAdminViewModel
@{
    ViewData["Title"] = "Update";
}
<h2 style="text-align: center; margin-left: -70px">Create an administrator</h2>
<div style="margin-left: auto; margin-right: auto; width: 20em">

    <form method="post" asp-action="CreateAdmin">
        <div class="form-group">
            <p>E-mail:</p>
            <input type="text" asp-for="Email" class="input-group-text" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <p>Password:</p>
            <input type="password" asp-for="Password" class="input-group-text">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary" value="Create">
    </form>
    <div class="form-group mt-3">
        <a asp-action="Index">Back to administrators</a>
    </div>
</div>


